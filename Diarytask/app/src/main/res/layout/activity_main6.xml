<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gris"
    android:screenOrientation="portrait"
    tools:context="es.com.lugman.www.diarytask.notesDiary">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:elevation="10dp"
                android:text="Set Date"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker"
                style="@android:style/Widget.DatePicker"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:calendarTextColor="@color/blanco"
                android:foregroundGravity="fill_vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="match_parent"
            android:background="@drawable/paper"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="24dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingTop="80dp"
                android:text="Your Note History"
                android:textAlignment="center"
                android:textColor="@color/brown1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:fontFamily="casual"
                android:paddingLeft="50dp"
                android:paddingRight="25dp"
                android:paddingTop="20dp"
                android:text="sknckcknlmnf cbshiscmdmds kinfidnkidfndfkd jdjjvmcvmvn"
                android:textColor="@color/brown2"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="73dp"
                android:layout_height="47dp"
                android:layout_marginLeft="250dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/fecha"
                tools:layout_editor_absoluteX="295dp"
                tools:layout_editor_absoluteY="570dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
